{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",                        // 生成调试信息
                "-std=c++23",                // 对应你的 settings 配置
                "${file}",                   // 当前打开的文件 (autodiff_demo.cpp)
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}", // 输出文件名
                // --- 修改开始 ---
                "-I${workspaceFolder}/lib/cppad/build/include",
                "-I${workspaceFolder}/lib/cppad/include",
                "-I/usr/include/eigen3",

                // --- 链接路径配置 (关键修改) ---
                // 1. 告诉链接器库文件在哪里 (Compile-time)
                "-L${workspaceFolder}/lib/cppad/build/cppad_lib",
                // 2. 链接库名 (对应 libcppad_lib.so)
                "-lcppad_lib",
                // 3. [新增] 告诉程序运行时去哪里找这个 .so 文件 (Runtime)
                // -Wl,-rpath,后面紧跟路径，中间不要有空格
                "-Wl,-rpath,${workspaceFolder}/lib/cppad/build/cppad_lib"
                // --- 修改结束 ---
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Debugger build task"
        }
    ]
}